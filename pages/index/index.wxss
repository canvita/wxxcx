/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  color: #fff;
  padding: 5px;
  background:url(yezi.jpg)  ;
}
.search-bar {
  display: flex;
  justify-content: space-around;
}
.search-input {
  background-color: #fff;
  color: #333;
  padding: 5px;
  width: 65%;
  border-radius: 6px;
}
.search-bar icon {
  margin: 5px;
}
.travel-destination {
  margin: 15px;
}
.province {
  font-size: 12px;
}
.destination {
  font-size: 30px;
}
.photos-and-weather {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.photos-and-weather image {
  width: 20px;
  height:20px;
  position: relative;
  top: 5px;
}

.local-guide {
  display: flex;
  justify-content: left;
  flex-flow: wrap;
  padding: 20rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #eee;
}
.local-guide guide-item {
  margin: 10rpx;
}
