/* pages/home/home.wxss */
.page-container {
  padding: 20rpx 20rpx 0 20rpx;
  text-shadow: 1px 1px 1px #666;
}
image{
  filter:drop-shadow(1px 1px #666);
}

/* change .png color */



/*image size*/
.big-size {
  width:70rpx;
  height:70rpx;
}
.middle-size {
  width: 50rpx;
  height: 50rpx;
}
.mini-size {
  width: 30rpx;
  height: 30rpx;
}
.rorate-90 {
  transform: rotate(90deg);
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 3000rpx;
  background: rgba(0, 0, 0, 0.2);
  z-index: 4;
}
.hide {
  visibility: hidden;
}

/*header*/
.header {
  position: relative;
  display: flex;
  justify-content: space-between;
  color:#fff;
}
.header-item {
  position: relative;
  text-align: center;
}
.header-item-image {
  position: absolute;
  top:4rpx;
  left:-30rpx;
  width: 40rpx;
  height:40rpx;
}

/*weather&&tepetature*/
.weather {
  position: relative;
  margin: 500rpx 0 40rpx;
  color:#fff; 
}
.weather-image {
  display: inline-block;
  position: relative;
  top: 20rpx;
}
.temperature {
  margin-bottom:40rpx;
  color:#fff;
}
.temprature-now {
  font-size: 160rpx;
  font-weight: 100;
}

/*forecast*/
.forecast {
  height:1000rpx;
  padding:20rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
  color:#fff;
  background: rgba(0,0,0,0.2);
}
.forecast-title {
  padding-bottom: 14rpx;
  border-bottom: #fff solid 1px;
}
.forecast-picker {
  position: relative;
  width: 20%;
  padding: 6rpx 0;
  border-bottom: #fff solid 1px;
}
.forecast-picker-image {
  position: absolute;
  display: inline-block;
  right: 0;
  top:14rpx;
  width: 26rpx;
  height: 26rpx;
}
.forecast-hourly {
  display: flex;
  overflow: auto;
  padding: 10rpx 0 20rpx 0;
  border-bottom: dashed #777 2rpx;
}
.forecast-hourly-item {
  display: inline-block;
  flex-shrink: 0;
  padding: 0 20rpx;
  text-align: center;
  font-size: 26rpx;
}
.forecast-hourly-image {
  width: 50rpx;
  height: 50rpx;
}
.forecast-daily {
  position: relative;
  display: flex;
  padding: 30rpx 20rpx;
  font-size: 30rpx;
  border-bottom: dashed #777 2rpx;
}
.forecast-daily-weather {
  display: inline-block;
  position: absolute;
  left: 25%;
}
.forecast-daily-pop {
  display: inline-block;
  position: absolute;
  left: 50%;
}
.forecast-daily-tmpbound {
  display: inline-block;
  position: absolute;
  right: 5%;
}
.forecast-daily-pop-text {
  position: relative;
  bottom: 18rpx;
  left: 10rpx;
  display: inline-block;
}

/*detail*/
.detail {
  height:520rpx;
  padding:20rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
  color:#fff;
  background: rgba(0,0,0,0.2);
}
.detail-item {
  display: flex;
  align-items: center;
  width: 100%;
  overflow: hidden;
}
.detail-item-image {
  padding: 20rpx 40rpx;
  width: 80rpx;
  height: 80rpx;
  font-size: 40rpx;
}
.detail-item-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  height: 90rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #ccc;
}




/*add&show*/
.add {
  position: fixed;
  z-index: 5;
  top:0;
  left:0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
}
.add-item {
  display: inline-block;
  flex-grow: 0;
  padding: 10rpx;
}
.add-image {
  width: 60rpx;
  height: 60rpx;
  margin: 0 20rpx;
}
.add-input {
  width: 70%;
  color: #000;
  border-radius: 40rpx;
  background: #fff;
  padding-left: 30rpx;
}
.show {
  position: fixed;
  z-index: 5;
  top:100rpx;
  left: 0;
  width: 100%;
  padding: 40rpx 0 30rpx 40rpx;
  color: #fff;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}
.show-city {
  font-size:36rpx;
}
.show-detail {
  margin-top: 10rpx;
  font-size: 26rpx;
}

/*menu&showmore*/
.menu {
  position: fixed;
  z-index: 5;
  top: 0;
  left: 0;
  height: 0;
  width: 100%;
}
.menu-header {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 18rpx 30rpx 15rpx 40rpx;
  color:#fff;
  font-size: 32rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}
.menu-header-text {
  position: relative;
  bottom: 12rpx;
  padding-left: 20rpx;
}
.menu-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx 0 20rpx 40rpx;
  color: #fff;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}
.menu-item-radio {
  margin-right: 23rpx;
}
.menu-item-city {
  font-size: 32rpx;
}
.menu-item-detail {
  margin-top: 6rpx;
  font-size: 24rpx;
}
.menu-item-weather {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 30rpx;
}
.menu-item-image {
  position: relative;
  top: 8rpx;
}
.show-more {
  position: fixed;
  z-index: 6;
  top: 30rpx;
  right: 20rpx;
  padding: 10rpx;
  width: 120rpx;
  color: #fff;
  font-size: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  border: 1px solid #fff;
  border-radius: 10rpx;
}
.show-more-item {
  margin: 20rpx 10rpx;
}


.pop-icon {
  width: 36rpx;
  height: 50rpx;
}